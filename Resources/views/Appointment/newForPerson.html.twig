{% extends "CLChillPersonBundle::layout.html.twig" %}

{% set activeRouteKey = null %}

{% form_theme form 'CLChillMainBundle:Form:fields.html.twig' %}

{% block personcontent %}
    <h2>{{ 'views.appointment.appointment_creation' | trans }}</h2>


{{ form_start(form) }}
            
	{{ form_row(form.agent, { 'label' : 'appointment.agent'|trans }) }} 
	{{ form_row(form.date, { 'label' : 'appointment.date'|trans }) }}   
	{{ form_row(form.durationTime, { 'label' : 'appointment.durationTime'|trans }) }} 
	{{ form_row(form.remark, { 'label' : 'appointment.remark'|trans }) }}
	{{ form_row(form.attendee, { 'label' : 'appointment.attendee'|trans }) }}
	{{ form_row(form.reason, { 'label' : 'appointment.reason'|trans }) }}

{{ form_rest(form) }}
            
            
    <div class="form_control">
        <div class="medium success btn icon-right entypo icon-user-add">
            <button type="submit">{{ 'views.Common.create'|trans }}</button>
        </div>
   	</div>
    
{{ form_end(form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('appointment_list_for_person', {'id': person.id }) }}">
            {{ 'views.appointment.back_to_the_appointments_list' | trans }}
        </a>
    </li>
</ul>
{% endblock %}